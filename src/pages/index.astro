        {
          teams.map(({ id, name, image }) => {
            return (
              <a href={`/teams/${id}`}>
                <img
                  src={image}
                  alt={`Escudo del equipo ${name}`}
                  width="50px"
                  height="50px"
                />
              </a>
            );
          })
        }
      </div>
